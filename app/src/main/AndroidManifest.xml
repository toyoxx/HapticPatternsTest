<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.ac.tohoku.mech.irs.hapticpatterntest" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".WelcomeScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CountDownScreen"
            android:label="@string/title_activity_count_down_screen" >
        </activity>
        <activity
            android:name=".CircularCountdownTest"
            android:label="@string/title_activity_circular_countdown_test"
            android:parentActivityName=".WelcomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jp.ac.tohoku.mech.irs.hapticpatterntest.WelcomeScreen" />
        </activity>
    </application>

</manifest>
